{
  "name": "lmms-lab-writer",
  "version": "0.1.0",
  "private": true,
  "description": "AI-native LaTeX editor - Tauri desktop application",
  "author": "LMMs Lab",
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "tauri:dev": "pnpm --filter @lmms-lab/writer-desktop tauri:dev",
    "tauri:build": "pnpm --filter @lmms-lab/writer-desktop tauri:build"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  }
}
